# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration (REQUIRED)
# PostgreSQL URL format: postgres://username:password@host:port/database_name
DATABASE_URL=postgres://username:password@localhost:5432/quiz_db

# Examples of DATABASE_URL:
# Local PostgreSQL: postgres://user:password@localhost:5432/quiz_db
# With SSL: postgres://user:password@localhost:5432/quiz_db?sslmode=require
# Neon: postgres://user:password@ep-xxx.us-east-1.aws.neon.tech/dbname
# Supabase: postgres://postgres:password@db.xxx.supabase.co:5432/postgres

# Deployment Configuration
VERCEL=False
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

